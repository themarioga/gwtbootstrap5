<module>
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="com.google.gwt.user.UserAgent"/>
    <inherits name="com.google.gwt.i18n.I18N"/>

    <!-- This is the default validator message mixin -->
    <replace-with class="org.gwtbootstrap5.client.ui.form.validator.DefaultValidatorMessageMixin">
        <when-type-is class="org.gwtbootstrap5.client.ui.form.validator.ValidatorMessageMixin" />
    </replace-with>

    <!-- Fall through to this rule -->
    <replace-with class="org.gwtbootstrap5.client.ui.impl.SimpleCheckBoxImpl">
        <when-type-is class="org.gwtbootstrap5.client.ui.impl.SimpleCheckBoxImpl" />
    </replace-with>

    <!-- Fall through to this rule -->
    <replace-with class="org.gwtbootstrap5.client.ui.impl.SimpleRadioButtonImpl">
        <when-type-is class="org.gwtbootstrap5.client.ui.impl.SimpleRadioButtonImpl" />
    </replace-with>

    <!-- Fall through to this rule -->
    <replace-with class="org.gwtbootstrap5.client.ui.impl.CheckBoxImpl">
        <when-type-is class="org.gwtbootstrap5.client.ui.impl.CheckBoxImpl" />
    </replace-with>

    <!-- Fall through to this rule -->
    <replace-with class="org.gwtbootstrap5.client.ui.impl.RadioImpl">
        <when-type-is class="org.gwtbootstrap5.client.ui.impl.RadioImpl" />
    </replace-with>

    <source path="client" />
    <source path="shared" />
</module>
